<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MAIN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/HEADER"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginTop="-16dp"
        android:paddingTop="68dp"
        android:background="@drawable/orange_round_rect"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/UPCOMING"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Upcoming"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/HEADER"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/CALENDAR"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="0dp"
        android:background="#00000000"
        android:drawableEnd="@drawable/calendar"
        android:text="View Full Schedule"
        android:textColor="#E8B100"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/UPCOMING"
        app:layout_constraintBottom_toBottomOf="@id/UPCOMING"
        app:layout_constraintVertical_bias="0.5"/>

    <LinearLayout
        android:id="@+id/NAV_BAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/HOME"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="#00000000"
            android:drawableTop="@drawable/home_filled"
            android:text="Home"
            android:textColor="#E8B100"/>

        <Button
            android:id="@+id/SUPPORT_CHAT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="#00000000"
            android:drawableTop="@drawable/chat"
            android:text="Support"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/MAP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="#00000000"
            android:drawableTop="@drawable/map"
            android:text="Navigation"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/NOTIFICATIONS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="#00000000"
            android:drawableTop="@drawable/notifications"
            android:text="Notifications"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/SETTINGS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"
            android:background="#00000000"
            android:drawableTop="@drawable/settings"
            android:text="Settings"
            android:textColor="#000000"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>